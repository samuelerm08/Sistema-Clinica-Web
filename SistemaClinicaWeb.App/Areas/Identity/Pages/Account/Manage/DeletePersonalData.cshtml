@page
@model DeletePersonalDataModel

<h4>Borrar datos personales</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Al borrar estos datos se eliminará tu cuenta permanentemente. No podrás volver a recuperarlos.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Borrar los datos y cerrar mi cuenta.</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}