@model IEnumerable<SistemaClinicaWeb.Core.Models.Persona.Medico>

<h1>Bienvenido</h1>

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Id)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.Nombre)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.Apellido)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.NumeroMatricula)
            </th>

            <th>
                @Html.DisplayNameFor(m => m.Especialidad)
            </th>

            <th>
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NumeroMatricula)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>

                <td>
                    @Html.ActionLink("Ver", "Details", "Medico", new {id = item.Id})                    
                </td>
            </tr>
        }
    </tbody>
</table>

